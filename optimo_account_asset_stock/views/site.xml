         <record model="ir.ui.view" id="building_tree">
        <field name="name">building.tree</field>
        <field name="model">optesis.building</field>
        <field name="arch" type="xml">
            <tree string="Liste des batiment">
                <field name="name"/>
                <field name="description"/>
                <!-- <field name="site_id"/> -->
            </tree>
        </field>
    </record>


        <record model="ir.ui.view" id="building_form">
        <field name="name">building.form</field>
        <field name="model">optesis.building</field>
        <field name="arch" type="xml">
            <form string="Batiment">

                <group colspan="4">
                    <group colspan="2" rowspan="2" string="Batiment">
                        <field name="name"/>
                         <field name="description"/>
                        <!-- <field name="site_id"/> -->
                    </group>
                </group>

            </form>
        </field>
    </record>

          <record model="ir.ui.view" id="level_tree">
        <field name="name">level.tree</field>
        <field name="model">optesis.level</field>
        <field name="arch" type="xml">
            <tree string="Liste des niveaux">
                <field name="name"/>
                <field name="description"/>
                <field name="building_id" />
                <!-- <field name="site_level"/> -->
            </tree>
        </field>
    </record>


        <record model="ir.ui.view" id="level_form">
        <field name="name">level.form</field>
        <field name="model">optesis.level</field>
        <field name="arch" type="xml">
            <form string="Niveau">
                <group>
                    <group string="Niveau">
                        <field name="name"/>
                         <field name="description"/>
                        <!-- <field name="site_level"/> -->
                        <field name="building_id" />
                    </group>
                </group>

            </form>
        </field>
    </record>

           <record model="ir.ui.view" id="room_tree">
        <field name="name">room.tree</field>
        <field name="model">optesis.room</field>
        <field name="arch" type="xml">
            <tree string="Liste des locals">
                 <field name="name"/>
                 <field name="description"/>
                 <field name="level_id"/>
                 <field name="room_building"/>
                 <!-- <field name="room_site"/> -->
            </tree>
        </field>
    </record>


        <record model="ir.ui.view" id="room_form">
        <field name="name">room.form</field>
        <field name="model">optesis.room</field>
        <field name="arch" type="xml">
            <form string="Local">

                <group colspan="4">
                    <group colspan="2" rowspan="2" string="Local">
                        <field name="name"/>
                         <field name="description"/>
                         <!-- <field name="room_site"/> -->
                         <field name="room_building" />
                        <field name="level_id" domain="[('building_id','=', room_building)]"/>
                    </group>
                </group>

            </form>
        </field>
    </record>


