<odoo>
    <data>
        <record id="transfer_form" model="ir.ui.view">
            <field name="model">optesis.asset.transfert</field>
            <field name="name">optesis_transfert_form</field>
            <field name="arch" type="xml">
                <form string="Transfert">
                    <header>
                        <button name="do_transfer" type="object" string="Transferer" states="draft" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,transfer"/>
                    </header>
                    <sheet string="Transfert">
                        <group>
                            <group>
                                <field name="site_id" required="True"/>
                                <field name="level_id" required="True" domain="[('building_id', '=', building_id)]"/>
                                <field name="service_id" required="True"/>
                            </group>
                            <group>
                                <field name="building_id" required="True" domain="[('site_id', '=', site_id)]"/>
                                <field name="room_id" required="True" domain="[('level_id', '=', level_id)]"/>
                                <field name="condition_id" required="True"/>
                            </group>
                        </group>
                         <div class="oe_title">
                        <label for="code_barre" class="oe_edit_only"/> <br/>
                        <h1 onkeyup="get_code(event)" type="object" name="change_code_barre">
                            <field name="code_barre" default_focus="1" class="oe_inline bar" placeholder="Recherche du code barre"/>  </h1>
                            <script>
                                var i = 0;
                                function get_code(event){
                                if (event.keyCode == 45){
                                jQuery('footer button:last').click();

                                }
                                }
                            </script>

                        </div>
                        <notebook>
                            <page string="Inventaires">
                                <field name="inventory_ids">
                                   <!--  <tree>
                                        <field name="product_id"/>
                                        <field name="family_id"/>
                                        <field name="code_bar"/>
                                        <field name="site"/>
                                        <field name="building"/>
                                        <field name="level"/>
                                        <field name="room"/>
                                    </tree> -->
                                </field>
                            </page>
                        </notebook>
                        <footer>
                           <button  type="object" string="verifier" name="change_code_barre" id="check" invisible="1"/>
                       </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="act_transfer" name="Transfert" res_model="optesis.asset.transfert" view_mode="tree,form"/>
        <menuitem id="menu_transfer" name="Transfert inventaire" parent="asset_menu_1" action="act_transfer" sequence="40"/>

    </data>
</odoo>